
#include <../struct.h>

samplerCUBE BaseSkyTexture: register(s0);
samplerCUBE SecondSkyTexture: register(s1);

float BlendFactor;
float4 Color;

float4 main(vs_out_skybox IN):COLOR0
{
	float4 Color1 = texCUBE(BaseSkyTexture, IN.TexUV);
	float4 Color2 = texCUBE(SecondSkyTexture, IN.TexUV);
	float4 FinalColor = lerp(Color1,Color2,BlendFactor);
	FinalColor.rgb = lerp(FinalColor.rgb,Color.rgb,Color.a);
	//FinalColor.a = 1;
	return FinalColor;
}
