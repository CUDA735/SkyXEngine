
#include <../struct.h>
#include <../mtrl.h>

sampler2D BaseSampler:register(s0);
sampler2D MDRSampler:register(s6);
sampler2D RF0SSIsSampler:register(s10);

half4 Param;
half3 NearFarIsUnlit;

ps_out_ds_mrt main(vs_out_gcommon IN)
{
	ClipFar(IN.Pos.z,NearFarIsUnlit.y);

	ps_out_ds_mrt OUT; 
	OUT.Color = tex2D(BaseSampler,IN.TexUV);

	half3 NormalMicro = ((2.0 * (tex2D(MDRSampler, IN.TexUV).rgb)) - 1.0);
	NormalMicro *= ((2.f * Param.z) - 1.f) * 2.f;
	half3 NormalPixel = normalize((IN.Normal+half3(NormalMicro.xy,IN.Normal.z)) * 0.5f);
	
	OUT.Normal.xyz = 0.5f * NormalPixel + 0.5f;
	OUT.Normal.w = NearFarIsUnlit.z;
	
	OUT.Param = tex2D(RF0SSIsSampler,IN.TexUV);
	OUT.Param.z = NearFarIsUnlit.w;
	
	OUT.Depth = GetDepthW(IN.Pos,NearFarIsUnlit.xy);
	
	return OUT;
}