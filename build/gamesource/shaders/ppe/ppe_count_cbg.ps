
#include <../struct.h>

half3 Param;
//x - contrast;
//y - gamma;	
//z - bright;

sampler2D FrameSampler:register(s0);

half4 main(vs_out_pp IN):COLOR0
{
	half4 color = tex2D(FrameSampler,IN.TexUV);
	
	color.r = pow(((Param.x * color.r) + Param.z),(1.0/Param.y));
	color.g = pow(((Param.x * color.g) + Param.z),(1.0/Param.y));
	color.b = pow(((Param.x * color.b) + Param.z),(1.0/Param.y));

	return color;
}