
#include <../struct.h>

half2 WinSize;

half4 main(vs_out_pp IN):COLOR0
{
	#if defined(_COLUMN_)
	if(frac(IN.TexUV.y*WinSize.y*0.5) >= 0.5)
		clip(-1);

	clip(frac(IN.TexUV.x*WinSize.x*0.5) - 0.5);
	
	#elif defined(_STR_)
	clip(frac(IN.TexUV.y*WinSize.y*0.5) - 0.5);
	
	[branch]if(frac(IN.TexUV.x*WinSize.x*0.5) >= 0.5)
		clip(-1);
	
	#elif defined(_COLUMN_STR_)
	clip(frac(IN.TexUV.y*WinSize.y*0.5) - 0.5);
	clip(frac(IN.TexUV.x*WinSize.x*0.5) - 0.5);
	
	#else
	#error unexpected operation
	#endif
	return 1;
}